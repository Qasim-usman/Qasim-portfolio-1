<style>
  @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap');

  body {
    margin: 0;
    font-family: 'Poppins', sans-serif;
    background: linear-gradient(120deg, #0a0a0a, #111111);
    color: #fff;
    scroll-behavior: smooth;
  }

  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  .hero-content {
    display: flex;
    flex-wrap: wrap;
    max-width: 1200px;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  .hero-text {
    flex: 1 1 500px;
  }

  .hero-image {
    flex: 1 1 300px;
    text-align: center;
  }

  .hero-image img {
    max-width: 300px;
    border-radius: 50%;
    border: 4px solid #00fff7;
    box-shadow: 0 0 40px #00fff777;
    animation: float 4s ease-in-out infinite;
  }

  .hero-text h1 {
    font-size: 3rem;
    font-weight: bold;
    background: linear-gradient(90deg, #00fff7, #ff00f7);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: glow 4s infinite alternate;
  }

  .hero-text h1 span {
    text-shadow: 0 0 15px #00fff7;
  }

  .animated-role {
    font-size: 1.4rem;
    color: #00fff7;
    margin-top: 0.5rem;
    font-weight: bold;
  }

  .hero-text p {
    font-size: 1.1rem;
    margin: 1.5rem 0 2rem;
    color: #ccc;
    line-height: 1.6;
  }

  .hero-buttons {
    margin-top: 1rem;
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .btn-glow,
  .btn-outline {
    padding: 0.8rem 2rem;
    border-radius: 30px;
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    transition: 0.3s ease;
  }

  .btn-glow {
    background: linear-gradient(90deg, #00fff7, #ff00f7);
    color: #000;
    box-shadow: 0 0 20px #00fff7;
  }

  .btn-glow:hover {
    transform: scale(1.05);
    box-shadow: 0 0 40px #00fff7;
  }

  .btn-outline {
    border: 2px solid #00fff7;
    color: #00fff7;
    background: transparent;
  }

  .btn-outline:hover {
    background: #00fff7;
    color: #000;
    box-shadow: 0 0 20px #00fff7;
  }

  .tech-icons {
    margin-top: 2.5rem;
  }

  .tech-icons img {
    height: 45px;
    margin: 0 8px;
    filter: drop-shadow(0 0 5px #00fff7);
    transition: transform 0.3s ease;
  }

  .tech-icons img:hover {
    transform: scale(1.1);
  }

  .scroll-down {
    margin-top: 2rem;
    font-size: 1rem;
    color: #666;
    animation: blink 2s infinite;
  }

  .sleek-divider {
    height: 2px;
    width: 90%;
    margin: 3rem auto;
    background: linear-gradient(to right, rgba(0, 204, 255, 0.8), rgba(255, 255, 255, 0), rgba(0, 204, 255, 0.8));
    border-radius: 999px;
    opacity: 0.7;
  }

  .section {
    padding: 4rem 2rem;
    max-width: 1000px;
    margin: auto;
    text-align: center;
  }

  .section h3 {
    font-size: 2rem;
    color: #00fff7;
    margin-bottom: 1rem;
  }

  .glass {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 8px 32px 0 rgba(0, 255, 255, 0.2);
    border-radius: 16px;
    backdrop-filter: blur(5px);
    padding: 3rem;
    margin-bottom: 2rem;
  }

  .skills-icons img {
    height: 45px;
    margin: 10px;
    filter: drop-shadow(0 0 5px #00fff7);
  }

  .project-grid {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    margin-top: 2rem;
  }

  .project-card {
    background: #1a1a1a;
    padding: 1.5rem;
    border-radius: 12px;
    box-shadow: 0 0 15px #00fff735;
    transition: 0.3s;
  }

  .project-card h4 {
    color: #00fff7;
    margin-bottom: 0.5rem;
  }

  .project-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 0 30px #00fff760;
  }

  .contact-form {
    max-width: 500px;
    margin: 2rem auto 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .contact-form input,
  .contact-form textarea {
    padding: 1rem;
    border: none;
    border-radius: 8px;
    background: #111;
    color: #fff;
    box-shadow: 0 0 10px #00fff725;
  }

  .contact-form input::placeholder,
  .contact-form textarea::placeholder {
    color: #888;
  }

  .contact-form button {
    border: none;
    cursor: pointer;
    font-size: 1rem;
  }

  @keyframes glow {
    from {
      text-shadow: 0 0 10px #00fff7;
    }

    to {
      text-shadow: 0 0 25px #ff00f7;
    }
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0);
    }

    50% {
      transform: translateY(-12px);
    }
  }

  @keyframes blink {
    0%, 100% {
      opacity: 0.3;
    }

    50% {
      opacity: 1;
    }
  }

  @media (max-width: 768px) {
    .hero-content {
      flex-direction: column;
      text-align: center;
    }

    .hero-image img {
      max-width: 200px;
    }

    .hero-text h1 {
      font-size: 2rem;
    }
  }
</style>

<!-- âœ… Typing Effect -->
<script>
  const roles = [
    "Full-Stack Developer",
    "Node.js + MongoDB Expert",
    "REST API & MySQL Pro"
  ];
  let index = 0;
  const typedRole = document.getElementById("typed-role");
  setInterval(() => {
    typedRole.textContent = roles[index];
    index = (index + 1) % roles.length;
  }, 3000);
</script>
