    </form>
    <div class="socials">
      <a href="https://github.com/Qasim-usman" target="_blank">GitHub</a>
      <a href="https://linkedin.com" target="_blank">LinkedIn</a>
      <a href="mailto:rqcoder412@gmail.com">Email</a>
    </div>
  </section>

  <a href="#top" class="top-btn">â†‘</a>

  <%- include('partials/footer') %>
  <script>
    const roles = ["Full-Stack Developer", "Node.js + MongoDB Expert", "REST API & MySQL Pro"];
    let index = 0;
    const typedRole = document.getElementById("typed-role");
    setInterval(() => {
      typedRole.textContent = roles[index];
      index = (index + 1) % roles.length;
    }, 3000);
  </script>
</body>
</html>
