  <!-- Embedded CSS -->
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap');

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    html {
      scroll-behavior: smooth;
    }

    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(120deg, #0a0a0a, #111111);
      color: #fff;
      line-height: 1.6;
      margin-top: 80px;
    }

    /* Hero Section */
    .hero {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem;
    }

    .hero-content {
      display: flex;
      flex-wrap: wrap;
      max-width: 1200px;
      align-items: center;
      justify-content: space-between;
      gap: 3rem;
    }

    .hero-text {
      flex: 1 1 500px;
      min-width: 300px;
    }

    .hero-image {
      flex: 1 1 300px;
      text-align: center;
    }

    .hero-image img {
      max-width: 300px;
      width: 100%;
      border-radius: 50%;
      border: 4px solid #00fff7;
      box-shadow: 0 0 40px #00fff777;
      animation: float 4s ease-in-out infinite;
    }

    .hero-text h1 {
      font-size: 3rem;
      font-weight: bold;
      background: linear-gradient(90deg, #00fff7, #ff00f7);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      animation: glow 4s infinite alternate;
      margin-bottom: 1rem;
    }

    .hero-text h1 span {
      text-shadow: 0 0 15px #00fff7;
    }

    .animated-role {
      font-size: 1.4rem;
      color: #00fff7;
      margin: 0.5rem 0;
      font-weight: bold;
    }

    .hero-text p {
      font-size: 1.1rem;
      margin: 1.5rem 0 2rem;
      color: #ccc;
    }

    .hero-buttons {
      margin: 2rem 0;
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
    }

    .btn-glow,
    .btn-outline {
      padding: 0.8rem 2rem;
      border-radius: 30px;
      font-weight: 600;
      font-size: 1rem;
      text-decoration: none;
      transition: all 0.3s ease;
      display: inline-block;
    }

    .btn-glow {
      background: linear-gradient(90deg, #00fff7, #ff00f7);
      color: #000;
      box-shadow: 0 0 20px #00fff7;
      border: none;
    }

    .btn-glow:hover {
      transform: scale(1.05);
      box-shadow: 0 0 40px #00fff7;
    }

    .btn-outline {
      border: 2px solid #00fff7;
      color: #00fff7;
      background: transparent;
    }

    .btn-outline:hover {
      background: #00fff7;
      color: #000;
      box-shadow: 0 0 20px #00fff7;
      transform: scale(1.05);
    }

    .tech-icons {
      margin-top: 2.5rem;
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
      justify-content: flex-start;
    }

    .tech-icons img {
      height: 45px;
      filter: drop-shadow(0 0 5px #00fff7);
      transition: transform 0.3s ease;
    }

    .tech-icons img:hover {
      transform: scale(1.2);
    }

    .scroll-down {
      margin-top: 2rem;
      font-size: 1rem;
      color: #666;
      animation: blink 2s infinite;
    }

    /* Sections */
    .sleek-divider {
      height: 2px;
      width: 90%;
      margin: 3rem auto;
      background: linear-gradient(to right, rgba(0, 255, 247, 0.3), rgba(255, 255, 255, 0.1), rgba(0, 255, 247, 0.3));
      border-radius: 999px;
    }

    .section {
      padding: 4rem 2rem;
      max-width: 1000px;
      margin: auto;
      text-align: center;
    }

    .section h3 {
      font-size: 2.5rem;
      color: #00fff7;
      margin-bottom: 1rem;
    }

    .divider {
      width: 80px;
      height: 4px;
      background: linear-gradient(90deg, #00fff7, #ff00f7);
      margin: 1.5rem auto;
      border-radius: 50px;
    }

    .glass {
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.15);
      box-shadow: 0 8px 32px 0 rgba(0, 255, 255, 0.2);
      border-radius: 16px;
      backdrop-filter: blur(8px);
      padding: 3rem;
      margin-bottom: 2rem;
      transition: transform 0.3s ease;
    }

    .glass:hover {
      transform: translateY(-5px);
    }

    .glass p {
      font-size: 1.1rem;
      color: #ddd;
      max-width: 800px;
      margin: 0 auto;
    }

    /* Skills Section */
    .skills-icons {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 1.5rem;
      margin-top: 2rem;
    }

    .skills-icons img {
      height: 50px;
      filter: drop-shadow(0 0 8px #00fff7);
      transition: transform 0.3s ease;
    }

    .skills-icons img:hover {
      transform: scale(1.2);
    }

    /* Projects Section */
    .project-grid {
      display: grid;
      gap: 2rem;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      margin-top: 2rem;
    }

    .project-card {
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.1);
      padding: 2rem;
      border-radius: 16px;
      box-shadow: 0 8px 32px rgba(0, 255, 255, 0.1);
      transition: all 0.3s ease;
    }

    .project-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 15px 40px rgba(0, 255, 255, 0.3);
    }

    .project-card h4 {
      color: #00fff7;
      font-size: 1.3rem;
      margin-bottom: 1rem;
    }

    .project-card p {
      color: #ccc;
      margin-bottom: 1.5rem;
    }

    .project-card .btn-glow {
      margin-top: 1rem;
    }

    /* Contact Section */
    .contact-form {
      max-width: 600px;
      margin: 2rem auto 0;
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .contact-form input,
    .contact-form textarea {
      padding: 1rem;
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: 8px;
      background: rgba(255, 255, 255, 0.05);
      color: #fff;
      font-family: 'Poppins', sans-serif;
      transition: border-color 0.3s ease;
    }

    .contact-form input:focus,
    .contact-form textarea:focus {
      outline: none;
      border-color: #00fff7;
      box-shadow: 0 0 10px rgba(0, 255, 247, 0.3);
    }

    .contact-form input::placeholder,
    .contact-form textarea::placeholder {
      color: #888;
    }

    .contact-form button {
      border: none;
      cursor: pointer;
      font-size: 1rem;
      font-family: 'Poppins', sans-serif;
    }

    .socials {
      margin-top: 2rem;
      display: flex;
      justify-content: center;
      gap: 2rem;
      flex-wrap: wrap;
    }

    .socials a {
      color: #00fff7;
      text-decoration: none;
      font-size: 1.1rem;
      font-weight: 600;
      transition: color 0.3s ease;
    }

    .socials a:hover {
      color: #ff00f7;
    }

    /* Back to top button */
    .top-btn {
      position: fixed;
      bottom: 30px;
      right: 30px;
      background: linear-gradient(90deg, #00fff7, #ff00f7);
      color: #000;
      border-radius: 50%;
      width: 50px;
      height: 50px;
      font-size: 1.5rem;
      display: flex;
      align-items: center;
      justify-content: center;
      text-decoration: none;
      box-shadow: 0 0 20px rgba(0, 255, 247, 0.5);
      transition: transform 0.3s ease;
      font-weight: bold;
    }

    .top-btn:hover {
      transform: scale(1.1);
    }

    /* Animations */
    @keyframes glow {
      from {
        text-shadow: 0 0 10px #00fff7;
      }
      to {
        text-shadow: 0 0 25px #ff00f7;
      }
    }

    @keyframes float {
      0%, 100% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(-12px);
      }
    }

    @keyframes blink {
      0%, 100% {
        opacity: 0.3;
      }
      50% {
        opacity: 1;
      }
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .hero-content {
        flex-direction: column;
        text-align: center;
      }

      .hero-text {
        order: 2;
      }

      .hero-image {
        order: 1;
      }

      .hero-image img {
        max-width: 200px;
      }

      .hero-text h1 {
        font-size: 2.5rem;
      }

      .section {
        padding: 2rem 1rem;
      }

      .glass {
        padding: 2rem;
      }

      .tech-icons {
        justify-content: center;
      }

      .hero-buttons {
        justify-content: center;
      }

      .project-grid {
        grid-template-columns: 1fr;
      }
    }

    @media (max-width: 480px) {
      .hero-text h1 {
        font-size: 2rem;
      }

      .hero-buttons {
        flex-direction: column;
        align-items: center;
      }

      .btn-glow,
      .btn-outline {
        width: 200px;
        text-align: center;
      }
    }
  </style>

  <!-- JavaScript -->
  <script>
    // Typing effect for roles
    const roles = [
      "Full-Stack Developer",
      "Node.js + MongoDB Expert", 
      "REST API & MySQL Pro"
    ];
    let index = 0;
    const typedRole = document.getElementById("typed-role");
    
    setInterval(() => {
      typedRole.textContent = roles[index];
      index = (index + 1) % roles.length;
    }, 3000);

    // Smooth scrolling for navigation
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });

    // Show/hide back to top button
    window.addEventListener('scroll', function() {
      const topBtn = document.querySelector('.top-btn');
      if (window.pageYOffset > 300) {
        topBtn.style.display = 'flex';
      } else {
        topBtn.style.display = 'none';
      }
    });
  </script>
</body>
</html>